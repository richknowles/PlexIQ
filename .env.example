# PlexIQ v3 Configuration
# Copy this file to .env and fill in your actual values

# Plex Server Configuration
PLEX_URL=http://localhost:32400
PLEX_TOKEN=your_plex_token_here

# External API Keys (Optional - for enhanced metadata)
TMDB_API_KEY=your_tmdb_api_key_here
OMDB_API_KEY=your_omdb_api_key_here

# Application Settings
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_RETENTION_DAYS=30
BACKUP_RETENTION_DAYS=7
DRY_RUN_DEFAULT=true

# Scoring Weights (0.0 - 1.0)
WEIGHT_PLAY_COUNT=0.3
WEIGHT_RATINGS=0.25
WEIGHT_SIZE=0.2
WEIGHT_AGE=0.15
WEIGHT_QUALITY=0.1

# Deletion Thresholds
MIN_DELETION_SCORE=0.7  # Only suggest items with score >= 0.7
NEVER_DELETE_RATING_THRESHOLD=8.0  # Never suggest items rated >= 8.0

# GUI Settings
GUI_THEME=dark  # light, dark, auto
PROGRESS_BAR_COLOR=#F4A940  # Mustard color
ANIMATION_DURATION_MS=200

# Data Directories
DATA_DIR=./data
BACKUP_DIR=./data/backups
LOG_DIR=./data/logs
CACHE_DIR=./data/cache
